!!!
%html
  %head
    %title UkVisa
    = stylesheet_link_tag 'main'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    #login-info
      - if current_user
        Signed in as #{current_user.email} #{link_to "Sign out", destroy_user_session_path}
      - else
        = link_to "Sign in", new_user_session_path
    = yield

<!DOCTYPE html>
<html>
<head>
  <title>UkVisa</title>
  <%= stylesheet_link_tag 'main' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="login-info">
<% if current_user %>
  Signed in as <%= current_user.email %> <%= link_to "Sign out", destroy_user_session_path %>
<% else %>
  <%= link_to "sign in with google", user_omniauth_authorize_path(:google)%>
  <%= link_to "Sign in", new_user_session_path %>
<% end %>
</div>
<%= yield %>

</body>
</html>
